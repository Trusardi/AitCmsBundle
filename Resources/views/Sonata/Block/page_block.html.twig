{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Pages</h3>
        </div>
        <div class="box-body">
            <table class="table table-hover">
                {% for item in pages %}
                    <tr>
                        <td>
                            <a href="{{ path('admin_app_page_edit', {id: item.id}) }}">{{ item.name }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock block %}
